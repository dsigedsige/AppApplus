<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HojaMainFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewCodigo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:text="@string/hello_blank_fragment"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nro Sed">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextNroSed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alimentador">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAlimentador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:text="Tipo de Sed"
                android:textColor="@color/colorPrimary"
                android:textSize="21sp"
                android:textStyle="bold" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckConvencional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convencional" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckCompacta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Compacta" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AÃ©rea" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckPMI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PMI" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckAnivel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A nivel" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckPedestal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pedestal" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckMonoPoste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monoposte" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckRecloser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ReCloser" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckSubTerranea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SubTerranea" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckBoveda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boveda" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckBiposte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biposte" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chckSBC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="SBC" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>